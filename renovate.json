{
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "schedule": ["every weekend"],
  "masterIssue": true,
  "labels": ["type: dependencies", "renovate"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "excludePackagePatterns": [
        "cypress",
        "cypress-grep",
        "cypress-data-session",
        "@bahmutov/cy-api",
        "cypress-highlight",
        "cypress-timestamps"
      ],
      "enabled": false
    }
  ]
}
